<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="nyc.muaadh_melhi_develpoer.unit5midassesment.fragment.DetailFragment">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.flaviofaria.kenburnsview.KenBurnsView
            android:id="@+id/fr_image"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_foreground" />

        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"

            android:background="#A0333639"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fr_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="sans-serif-light"
                android:hint="name"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>


        <TextView
            android:id="@+id/fr_email"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="hdvh@gmail.hbv.com"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/fr_phone_number"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="343434-434"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/fr_street"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="bronx"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fr_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="bronx"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/fr_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="bronx"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/fr_zipcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="bronx"
                android:textSize="20sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/date_brith"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="26-33-44"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>
